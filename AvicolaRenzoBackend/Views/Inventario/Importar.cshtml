@{
    ViewData["Title"] = "Importar CSV";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4" style="max-width: 800px;">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="m-0">Importar Inventario desde CSV</h2>
        <a class="btn btn-outline-secondary" href="/Inventario/Plantilla">Descargar plantilla</a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
    @if (TempData["Warn"] != null)
    {
        <div class="alert alert-warning">@TempData["Warn"]</div>
    }
    @if (TempData["Ok"] != null)
    {
        <div class="alert alert-success">@TempData["Ok"]</div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Importar" asp-controller="Inventario" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label class="form-label">Selecciona un CSV</label>
                    <input type="file" name="archivo" class="form-control" accept=".csv" required />
                    <div class="form-text">
                        Encabezados esperados: <code>Fecha, InventarioPromedio, PrecioKg, VentasKg, PerdidasKg, Observacion</code>.
                        Formatos de fecha aceptados: <code>yyyy-MM-dd</code>, <code>dd/MM/yyyy</code>.
                        Delimitador: coma o punto y coma.
                    </div>
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">Importar</button>
                    <a href="/Inventario" class="btn btn-outline-secondary">Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>


@{
    ViewData["Title"] = "Cargar desde CSV";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h2 class="text-center mb-4">Cargar Inventario desde Archivo CSV</h2>
    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="archivo" class="form-label">Selecciona un archivo CSV</label>
            <input type="file" name="archivo" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-danger">Subir</button>
        <a href="/Inventario" class="btn btn-secondary ms-2">Volver</a>
    </form>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger mt-3">@ViewBag.Error</div>
    }
}


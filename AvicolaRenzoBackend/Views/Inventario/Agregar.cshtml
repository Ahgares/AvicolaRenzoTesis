@model AvicolaRenzoPredictor.Models.Inventario
@{
    ViewData["Title"] = "Agregar Registro";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<form asp-action="Agregar" method="post" class="container mt-5">
    @Html.AntiForgeryToken()

    <div class="card shadow p-4">
        <div class="card-header bg-danger text-white text-center fs-4">
            <strong>Agregar Registro de Inventario</strong>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col">
                    <label asp-for="Fecha" class="form-label">Fecha</label>
                    <input asp-for="Fecha" type="date" class="form-control" />
                </div>
                <div class="col">
                    <label asp-for="InventarioPromedio" class="form-label">Inventario Promedio (kg)</label>
                    <input asp-for="InventarioPromedio" class="form-control" />
                </div>
            </div>

            <div class="row mb-3">
                <div class="col">
                    <label asp-for="PrecioKg" class="form-label">Precio por Kg (S/.)</label>
                    <input asp-for="PrecioKg" class="form-control" />
                </div>
                <div class="col">
                    <label asp-for="VentasKg" class="form-label">Ventas (kg)</label>
                    <input asp-for="VentasKg" class="form-control" />
                </div>
                <div class="col">
                    <label asp-for="PerdidasKg" class="form-label">PÃ©rdidas (kg)</label>
                    <input asp-for="PerdidasKg" class="form-control" />
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Observacion" class="form-label">ObservaciÃ³n</label>
                <textarea asp-for="Observacion" class="form-control"></textarea>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                <button type="submit" class="btn btn-success">Guardar</button>
            </div>
        </div>
    </div>
    
</form>



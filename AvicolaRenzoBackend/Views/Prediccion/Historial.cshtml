@model IEnumerable<AvicolaRenzoPredictor.Models.Prediccion>
@{
    ViewData["Title"] = "Historial de Predicciones";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="m-0">Historial de Predicciones</h2>
        <div class="d-flex gap-2">
            <a href="/Inventario" class="btn btn-outline-secondary">Inventario</a>
            <a href="/Prediccion/Resultados" class="btn btn-danger">Generar nuevas</a>
        </div>
    </div>

    <table class="table table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th>Creado</th>
                <th>Inventario Prom.</th>
                <th>Precio (S/.)</th>
                <th>Ventas Pred.</th>
                <th>Abastecer</th>
                <th>Alerta</th>
                <th>Modelo</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var p in Model)
        {
            <tr class="@(p.Alerta.Contains("Riesgo") ? "table-danger" : p.Alerta.Contains("Sobra") ? "table-warning" : "table-success")">
                <td>@p.CreatedAt.ToLocalTime()</td>
                <td>@p.InventarioPromedio</td>
                <td>@p.PrecioKg</td>
                <td>@p.VentasPred</td>
                <td>@p.AbastecerKg</td>
                <td><strong>@p.Alerta</strong></td>
                <td>@(string.IsNullOrEmpty(p.ModeloVersion) ? "-" : p.ModeloVersion)</td>
            </tr>
        }
        </tbody>
    </table>

    <nav aria-label="PaginaciÃ³n">
        <ul class="pagination justify-content-center">
            @{ 
                var page = (int)(ViewBag.Page ?? 1);
                var pageSize = (int)(ViewBag.PageSize ?? 50);
                var totalPages = (int)(ViewBag.TotalPages ?? 1);
                var prev = Math.Max(1, page - 1);
                var next = Math.Min(totalPages, page + 1);
            }
            <li class="page-item @(page == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Historial", new { page = prev, pageSize = pageSize })">Anterior</a>
            </li>
            <li class="page-item disabled"><span class="page-link">PÃ¡gina @(page) de @(totalPages) (@ViewBag.Total registros)</span></li>
            <li class="page-item @(page == totalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Historial", new { page = next, pageSize = pageSize })">Siguiente</a>
            </li>
        </ul>
    </nav>
</div>


